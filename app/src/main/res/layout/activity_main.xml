<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ravan.me_nili.slidshow.MainActivity"
    android:background="#9efde7">
  <!--FF41C6A7
-->
    <android.support.v4.view.ViewPager

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="1dp"
        android:id="@+id/vp">

    </android.support.v4.view.ViewPager>


    <View
        android:layout_width = "match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shape4"
        android:id="@+id/vline1"
        android:layout_below="@+id/vp"/>

  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="جدید ترین ها"
      android:id="@+id/btn1"
      android:layout_marginRight="2dp"
      android:layout_marginTop="1dp"
      android:layout_marginBottom="1dp"
      android:background="@drawable/shape"
      android:layout_below="@+id/vline1"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:textColor="@android:color/background_light"
      />

  <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="پر بازدید ترین ها"
        android:layout_toLeftOf="@+id/btn1"
      android:layout_margin="2dp"
      android:layout_marginTop="1dp"
      android:layout_marginBottom="1dp"
        android:layout_below="@+id/vline1"
        android:id="@+id/btn2"
        android:background="@drawable/shape"
      android:textColor="@android:color/background_light"
        />


    <View
        android:layout_width = "match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shape4"
        android:id="@+id/vline2"
        android:layout_below="@+id/btn1"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/vline2"
        android:id="@+id/im1"
        android:scaleType="fitXY"
        />


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/vline2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:id="@+id/im2"
        android:layout_toRightOf="@+id/im1"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/im2"
        android:id="@+id/im3"
        android:layout_toRightOf="@+id/im1"
        android:scaleType="fitXY"
       />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/im1"
        android:id="@+id/im4"
        android:scaleType="fitXY"
     />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/im5"
        android:layout_below="@+id/im3"
        android:layout_toRightOf="@+id/im4"
        android:scaleType="fitXY"

        />



</RelativeLayout>
