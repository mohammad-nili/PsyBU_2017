<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ravan.me_nili.slidshow.MainActivity"
    android:background="#9efde7">
  <!--FF41C6A7
-->
    <android.support.v4.view.ViewPager

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="1dp"
        android:id="@+id/vp">


    </android.support.v4.view.ViewPager>

    <View
        android:layout_width = "match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shape4"
        android:id="@+id/vline1"
        android:layout_below="@+id/vp"/>

  <Button
      android:layout_width="40dp"
      android:layout_height="20dp"
      android:text="پر بازدید ترین ها"
      android:id="@+id/btn1"
      android:layout_marginRight="2dp"
      android:layout_marginTop="1dp"
      android:layout_marginBottom="1dp"
      android:background="@drawable/shape"
      android:layout_below="@+id/vline1"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:textColor="@android:color/background_light"
      android:textSize="8sp" />

  <Button
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:text="جدیدترین ها"
        android:layout_toLeftOf="@+id/btn1"
      android:layout_margin="2dp"
      android:layout_marginTop="1dp"
      android:layout_marginBottom="1dp"
        android:layout_below="@+id/vline1"
        android:id="@+id/btn2"
        android:background="@drawable/shape"
      android:textColor="@android:color/background_light"
      android:textSize="8sp" />


    <View
        android:layout_width = "match_parent"
        android:layout_height="2dp"
        android:background="@drawable/shape4"
        android:id="@+id/vline2"
        android:layout_below="@+id/btn1"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@+id/vline2"
        android:id="@+id/im1"
        android:scaleType="fitXY"

        />


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/vline2"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:id="@+id/im2"
        android:layout_toRightOf="@+id/im1"
        android:scaleType="fitXY"
      />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_below="@+id/im2"
        android:id="@+id/im3"
        android:layout_toRightOf="@+id/im1"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="fill_parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="7dp"
        android:layout_below="@+id/im1"
        android:id="@+id/im4"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:id="@+id/im5"
        android:layout_below="@+id/im3"
        android:layout_toRightOf="@+id/im4"
        android:scaleType="fitXY"

        />



</RelativeLayout>
